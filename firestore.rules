rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public reads for config + leaderboard + runtime bits
    match /game_config/{doc} { allow read: if true; }
    match /runtime/{doc}     { allow read: if true; }
    match /city_boosts/{doc} { allow read: if true; }

    // Example past-season storage (if you use it publicly)
    match /leaderboard_seasons/{season} { allow read: if true; }

    // Players (reads ok for MVP, writes via Functions only)
    match /players/{account} {
      allow read: if true;
      allow write: if false;
      match /{sub=**}/{doc} {
        allow read: if true;
        allow write: if false;
      }
    }
  }
}
